@model RestaurantWepApp.Models.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Restaurant Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f6f9;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 40px;
            max-width: 400px;
            width: 100%;
        }

        .login-title {
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            font-weight: 500;
            text-align: center;
            color: #333;
        }

        .form-control {
            border-radius: 5px;
        }

        .btn-primary {
            width: 100%;
            border-radius: 5px;
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .text-danger {
            font-size: 0.875rem;
        }

        .back-to-home {
            margin-top: 1rem;
            text-align: center;
        }

            .back-to-home a {
                text-decoration: none;
                color: #007bff;
            }

                .back-to-home a:hover {
                    text-decoration: underline;
                }

        .role-info {
            margin-top: 20px;
            font-size: 0.9rem;
        }

            .role-info table {
                width: 100%;
                margin-top: 10px;
                border: 1px solid #ddd;
                border-collapse: collapse;
            }

            .role-info th, .role-info td {
                padding: 8px 12px;
                text-align: left;
                border: 1px solid #ddd;
            }

            .role-info th {
                background-color: #f4f4f4;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <h2 class="login-title">Restaurant Login</h2>

        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>

        <!-- Roller ve Şifreler Tablosu -->
        <div class="role-info">
            <h5>Kullanıcı Bilgileri:</h5>
            <table>
                <thead>
                    <tr>
                        <th>Rol</th>
                        <th>Kullanıcı Adı</th>
                        <th>Şifre</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Admin</td>
                        <td>admin</td>
                        <td>1qa</td>
                    </tr>
                    <tr>
                        <td>Chef</td>
                        <td>chef</td>
                        <td>1qa</td>
                    </tr>
                    <tr>
                        <td>Waiter</td>
                        <td>waiter</td>
                        <td>1qa</td>
                    </tr>
                    <tr>
                        <td>Cashier</td>
                        <td>cashier</td>
                        <td>1qa</td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
