@model List<Business.Dtos.Responses.StoreBillResponseDto>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "StoreBills";
}

<div class="container mt-4">
    <h2 class="mb-4">Mağaza Faturaları</h2>

    <!-- Add StoreBill Button -->
    <a class="btn btn-primary mb-3" asp-action="Add">
        Yeni StoreBill Ekle
    </a>

    <!-- StoreBills Table -->
    <div class="card">
        <div class="card-header">
            StoreBill Listesi
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlangıç Tarihi</th>
                        <th>Bitiş Tarihi</th>
                        <th>Toplam Tutar</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var storeBill = Model[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@storeBill.CreatedDate</td>
                            <td>@storeBill.ClosedDate</td>
                            <td>@storeBill.TotalAmount.ToString("C")</td>
                            <td>@storeBill.Status</td>
                            <td>
                                <!-- Edit Button -->
                                <a class="btn btn-warning btn-sm text-white me-2" asp-action="Update" asp-route-id="@storeBill.Id">
                                    Düzenle
                                </a>

                                <!-- Delete Button -->
                                <button class="btn btn-danger btn-sm" onclick="deleteStoreBill('@storeBill.Id')">
                                    Sil
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            window.deleteStoreBill = function (id) {
                if (confirm('Bu StoreBill kaydını silmek istediğinizden emin misiniz?')) {
                    $.ajax({
                        url: '@Url.Action("Delete", "StoreBill")/' + id,
                        type: 'POST',
                        success: function (response) {
                            console.log(response); // Yanıtı kontrol edin
                            if (response.success) {
                                location.reload();
                            } else {
                                alert(response.message);
                            }
                        },
                        error: function (xhr, status, error) {
                            console.error('AJAX Error: ', status, error); // Hata mesajlarını kontrol edin
                            alert('StoreBill silinirken bir hata oluştu.');
                        }
                    });
                }
            };
        });

    </script>
}
