@model List<Business.Dtos.Responses.ProductResponseDto>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <h2 class="mb-4">Ürünler</h2>

    <!-- Add Product Button -->
    <a class="btn btn-primary mb-3" asp-action="Add">
        Yeni Ürün Ekle
    </a>

    <!-- Products Table -->
    <div class="card">
        <div class="card-header">
            Ürün Listesi
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Adı</th>
                        <th>Kategori</th>
                        <th>Fiyat</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var product = Model[i];
                        <tr id="product-@product.Id">
                            <td>@(i + 1)</td>
                            <td>@product.Name</td>
                            <td>@product.CategoryName</td>
                            <td>@product.Price.ToString("C")</td>
                            <td>@product.Status</td>
                            <td>
                                <!-- Edit Button -->
                                <a class="btn btn-warning btn-sm text-white me-2" asp-action="Update" asp-route-id="@product.Id">
                                    Düzenle
                                </a>

                                <!-- Delete Button -->
                                <button class="btn btn-danger btn-sm" onclick="deleteProduct('@product.Id')">
                                    Sil
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // JavaScript code for handling AJAX requests and UI interactions
        $(document).ready(function () {
            // JavaScript for delete action
            window.deleteProduct = function (id) {
                if (confirm('Bu ürünü silmek istediğinizden emin misiniz?')) {
                    $.ajax({
                        url: '@Url.Action("Delete", "Product")',
                        type: 'POST',
                        data: { id: id },
                        success: function (response) {
                            if (response.success) {
                                location.reload();
                            } else {
                                location.reload();
                            }
                        },
                        error: function () {
                            toastr.error('Ürün silinirken bir hata oluştu.');
                        }
                    });
                }
            };
        });
    </script>
}
