@model List<Business.Dtos.Responses.BillResponseDto>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Faturalar";
}

<div class="container mt-4">
    <h2 class="mb-4">Fatura Listesi</h2>

    <!-- Add Bill Button -->
    <a class="btn btn-primary mb-3" asp-action="Add">
        Yeni Fatura Ekle
    </a>

    <!-- Bills Table -->
    <div class="card">
        <div class="card-header">
            Fatura Listesi
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Masa Numarası</th>
                        <th>Toplam Tutar</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var bill = Model[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@bill.TableName</td>
                            <td>@bill.TotalAmount.ToString("C")</td>
                            <td>@bill.Status</td>
                            <td>
                                <!-- Edit Button -->
                             @*   <a class="btn btn-warning btn-sm text-white me-2" asp-action="Update" asp-route-id="@bill.Id">
                                    Düzenle
                                </a>*@

                                <!-- Delete Button -->
                                <button class="btn btn-danger btn-sm" onclick="deleteBill('@bill.Id')">
                                    Sil
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // JavaScript code for handling AJAX requests and UI interactions
        $(document).ready(function () {
            // JavaScript for delete action
            window.deleteBill = function (id) {
                if (confirm('Bu faturayı silmek istediğinizden emin misiniz?')) {
                    $.ajax({
                        url: '@Url.Action("Delete", "Bill")/' + id,
                        type: 'POST',
                        success: function (response) {
                            if (response.success) {
                                location.reload();
                            } else {
                                alert(response.message);
                            }
                        },
                        error: function () {
                            alert('Fatura silinirken bir hata oluştu.');
                        }
                    });
                }
            };
        });
    </script>
}
