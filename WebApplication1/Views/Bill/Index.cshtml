@model List<Business.Dtos.Responses.BillResponseDto>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Faturalar";
}

<div class="container mt-4">
    <h2 class="mb-4">Fatura Listesi</h2>

    <!-- Add Bill Button -->
    <a class="btn btn-primary mb-3" asp-action="Add">
        Yeni Fatura Ekle
    </a>

    <!-- Bills Table -->
    <div class="card">
        <div class="card-header">
            Fatura Listesi
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Masa Numarası</th>
                        <th>Açılış Tarihi</th>
                        <th>Kapanış Tarihi</th>
                        <th>Toplam Tutar</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var bill = Model[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@bill.TableName</td>
                            <td>@bill.CreatedDate</td>
                            <td>@bill.ClosedDate</td>
                            <td>@bill.TotalAmount</td>
                            <td>@bill.Status</td>
                            <td>
                                <!-- Change Status Button -->
                                <button class="btn btn-info btn-sm me-2" onclick="showChangeStatusModal('@bill.Id', '@bill.Status')">
                                    Durum Değiştir
                                </button>

                                <!-- Delete Button -->
                                <button class="btn btn-danger btn-sm" onclick="deleteBill('@bill.Id')">
                                    Sil
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Change Status Modal -->
<div class="modal fade" id="changeStatusModal" tabindex="-1" aria-labelledby="changeStatusModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="changeStatusModalLabel">Durum Değiştir</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="billId" />
                <div class="mb-3">
                    <label for="statusSelect" class="form-label">Yeni Durum</label>
                    <select class="form-select" id="statusSelect">
                        <option value="">Durum Seç</option>
                        <!-- Enum'dan durumları doldur -->
                        <option value="1">Aktif</option>
                        <option value="2">Tahsil_Edildi</option>
                        <!-- Diğer durumlar buraya eklenecek -->
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <button type="button" class="btn btn-primary" onclick="changeBillStatus()">Güncelle</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // JavaScript for delete action
            window.deleteBill = function (id) {
                if (confirm('Bu faturayı silmek istediğinizden emin misiniz?')) {
                    $.ajax({
                        url: '@Url.Action("Delete", "Bill")/' + id,
                        type: 'POST',
                        success: function (response) {
                            if (response.success) {
                                location.reload();
                            } else {
                                alert(response.message);
                            }
                        },
                        error: function () {
                            alert('Fatura silinirken bir hata oluştu.');
                        }
                    });
                }
            };

            // Show modal with current status and bill id
            window.showChangeStatusModal = function (billId, currentStatus) {
                $('#billId').val(billId);
                $('#statusSelect').val(currentStatus); // Mevcut durumu seçili yap
                $('#changeStatusModal').modal('show');
            };

            // Change bill status
            window.changeBillStatus = function () {
                var billId = $('#billId').val();
                var newStatus = $('#statusSelect').val();
                $.ajax({
                    url: '@Url.Action("Update", "Bill")',
                    type: 'POST',
                    data: {
                        Id: billId,
                        Status: newStatus
                    },
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert('Durum güncellenirken bir hata oluştu.');
                    }
                });
            };
        });
    </script>
}
